<p><%= link_to 'add a screening', new_manage_screening_path, class: "btn btn-primary float-right" %></p>

<h1><%= @movie %></h1>
<p>auditorium: <%= @movie.auditorium %></p>
<hr/>

<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Screenings</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Orders</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
	<ul class="list-group">
		<% @movie.screenings.each do |screening| %>
			<li class="list-group-item"><%= decorated_date(screening.start) %> <small>(<%= screening.seats %> seats remaining)</small></li>
		<% end %>
	</ul>
  </div>
  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
	<div class="table-responsive">
	<table class="table table-bordered">
	  <thead>
	    <tr>
	      <th scope="col">Screening</th>
	      <th scope="col">Name</th>
	      <th scope="col">Email</th>
	      <th scope="col">Date</th>
	    </tr>
	  </thead>
	  <tbody>
		<% @movie.orders.each do |order| %>
			<tr>
		      <td><%= decorated_date(order.screening.start) %></td>
		      <td><%= order.name %></td>
		      <td><%= order.email %></td>
		      <td><%= decorated_date(order.created_at) %></td>
		    </tr>
		<% end %>
	 </tbody>
	</table>
  </div>
</div>




